            android:layout_height="wrap_content"
            android:fontFamily="@font/arcade"
            android:gravity="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/progress_defense"
            app:layout_constraintEnd_toEndOf="@+id/progress_defense"
            app:layout_constraintStart_toStartOf="@+id/progress_defense"
            android:text="@string/defense" />

        <ProgressBar
            android:id="@+id/progress_defense"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle_custom_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

