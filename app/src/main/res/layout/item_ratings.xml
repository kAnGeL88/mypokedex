        <TextView
            android:id="@+id/tv_ratings_defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arcade"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/progress_defense"
            app:layout_constraintEnd_toEndOf="@+id/progress_defense"
            app:layout_constraintStart_toStartOf="@+id/progress_defense"
            app:layout_constraintTop_toTopOf="@+id/progress_defense"
            tools:text="40" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rating_super_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
