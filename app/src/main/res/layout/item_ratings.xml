        <TextView
            android:id="@+id/tv_title_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arcade"
            android:gravity="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/progress_speed"
            app:layout_constraintEnd_toEndOf="@+id/progress_speed"
            app:layout_constraintStart_toStartOf="@+id/progress_speed"
            android:text="@string/speed" />

        <ProgressBar
            android:id="@+id/progress_speed"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle_custom_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:progress="40" />

        <TextView
            android:id="@+id/tv_ratings_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arcade"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/progress_speed"
            app:layout_constraintEnd_toEndOf="@+id/progress_speed"
            app:layout_constraintStart_toStartOf="@+id/progress_speed"
            app:layout_constraintTop_toTopOf="@+id/progress_speed"
            tools:text="40" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rating_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/cl_rating_hp"
        app:layout_constraintStart_toStartOf="@+id/cl_rating_hp"
        app:layout_constraintTop_toBottomOf="@+id/cl_rating_hp">

        <TextView
            android:id="@+id/tv_title_attack"
