            android:fontFamily="@font/arcade"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/progress_attack"
            app:layout_constraintEnd_toEndOf="@+id/progress_attack"
            app:layout_constraintStart_toStartOf="@+id/progress_attack"
            app:layout_constraintTop_toTopOf="@+id/progress_attack"
            tools:text="40" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rating_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/cl_rating_speed"
        app:layout_constraintStart_toStartOf="@+id/cl_rating_speed"
        app:layout_constraintTop_toBottomOf="@+id/cl_rating_speed">

        <TextView
            android:id="@+id/tv_title_defense"
