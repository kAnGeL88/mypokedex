        android:id="@+id/cl_rating_super_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/cl_rating_defense"
        app:layout_constraintStart_toStartOf="@+id/cl_rating_defense"
        app:layout_constraintTop_toBottomOf="@+id/cl_rating_defense">

